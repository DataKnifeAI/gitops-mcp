apiVersion: v1
kind: Secret
metadata:
  name: grafana-mcp-secrets
  namespace: mcp-servers
  labels:
    app: grafana-mcp
    component: mcp-server
type: Opaque
stringData:
  # Service Account Token (preferred authentication method)
  # Create a service account in Grafana and generate a token
  GRAFANA_SERVICE_ACCOUNT_TOKEN: ""
  
  # Username/Password authentication (alternative to service account token)
  # Note: Use either service account token OR username/password, not both
  GRAFANA_USERNAME: ""
  GRAFANA_PASSWORD: ""
  
  # Organization ID for multi-org Grafana setups (optional)
  # If not specified, uses the default organization
  GRAFANA_ORG_ID: ""
